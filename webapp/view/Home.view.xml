<mvc:View
    xmlns:odata="sap.ui.comp.odata"
    controllerName="com.bootcamp.sapui5.freestyle.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <VBox id="vTest">
            <Text
                id="textPrueba"
                text="{i18n>textPruebai18n}"
            />
            <Toolbar id="toolbarID">
                <Input
                    id="inputID"
                    visible="true"
                    change="onChange"
                    value="{LocalDataModel>/valueInput}"
                />

                <ComboBox
                    id="comboboxID"
                    selectionChange="onSelectionChange"
                    selectedKey="{LocalDataModel>/selectedKey}"
                    items="{
                        path: '/Categories',
                        sorter: { path: 'CategoryName' }

                }"
                >
                    <core:Item
                        key="{CategoryID}"
                        text="{CategoryID}-{CategoryName}"
                    />
                </ComboBox>
                <Button
                    id="btnBuscar"
                    text="{i18n>textBuscar}"
                    press="onPress"
                />
            </Toolbar>
        </VBox>
        <VBox id="vTest2">
            <core:Fragment
                fragmentName="com.bootcamp.sapui5.freestyle.view.fragments.ProductsTable"
                type="XML"
            />
        </VBox>
    </Page>
</mvc:View>
